#!/bin/sh
TEMPLATE=$(cat <<EOF
lxc.utsname = {{name}}\n
\n
lxc.network.type = veth\n
lxc.network.flags = up\n
lxc.network.link = br0\n
lxc.network.hwaddr = 00:50:56:ff:ee:{{ipseg}}\n
lxc.network.ipv4 = 172.17.1.{{ipseg}}\n
lxc.network.name = eth0\n
EOF
)

echo -e $TEMPLATE | sed "s/{{name}}/lxc-${IP}/g;s/{{ipseg}}/${IP}/g"
